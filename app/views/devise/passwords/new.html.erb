<div class="margin-left">
  <h2>Forgot your password?</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div>
    	<%= f.label :email, :class=>"label label-primary" %><br />
    	<%= f.email_field :email, autofocus: true , :id=>"email",:class=>'textbox-size' %>
    </div><br>

    <div><%= f.submit "Send" , :class=>'btn btn-primary'%></div>
  <% end %>
</div>